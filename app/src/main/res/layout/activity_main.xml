    <Button
        android:id="@+id/btnEditForm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Form"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05" />

    <Button
        android:id="@+id/btnNewForm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Form"
        app:layout_constraintBottom_toBottomOf="@+id/btnEditForm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnEditForm"
        app:layout_constraintTop_toTopOf="@+id/btnEditForm" />

    <Button
        android:id="@+id/btnExit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        app:layout_constraintBottom_toBottomOf="@+id/btnEditForm"
        app:layout_constraintEnd_toStartOf="@+id/btnEditForm"
        app:layout_constraintStart_toStartOf="parent"
