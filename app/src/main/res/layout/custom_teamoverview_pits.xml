<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Robot's Mass (kg): "
                android:textColor="@color/defaultColor"
                android:textSize="16sp" />

            <Space
                android:layout_width="5dp"
                android:layout_height="0dp"/>

            <TextView
                android:id="@+id/tvMass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/defaultColor"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Wheels: "
                android:textColor="@color/defaultColor"
                android:textSize="16sp" />

            <Space
                android:layout_width="5dp"
                android:layout_height="0dp"/>

            <TextView
                android:id="@+id/tvWheels"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/defaultColor"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Picks Up PC From: "
                android:textColor="@color/defaultColor"
                android:textSize="16sp" />

            <Space
                android:layout_width="5dp"
                android:layout_height="0dp"/>

            <TextView
                android:id="@+id/tvIntakePit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/defaultColor"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Carry Number of PC: "
                android:textColor="@color/defaultColor"
                android:textSize="16sp" />

            <Space
                android:layout_width="5dp"
                android:layout_height="0dp"/>

            <TextView
                android:id="@+id/tvCarryPit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/defaultColor"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Can Shoot to: "
                android:textColor="@color/defaultColor"
                android:textSize="16sp" />

            <Space
                android:layout_width="5dp"
                android:layout_height="0dp"/>

            <TextView
                android:id="@+id/tvShootPit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/defaultColor"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Comment: "
                android:textColor="@color/defaultColor"
                android:textSize="16sp" />

            <Space
                android:layout_width="5dp"
                android:layout_height="0dp"/>

            <TextView
                android:id="@+id/tvCommentPit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/defaultColor"
                android:textSize="16sp" />


        </LinearLayout>

        <Switch
            android:id="@+id/switchAutoPit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Has Autonomous"
            android:textColor="@color/defaultColor"
            android:textSize="16sp"
            android:thumbTint="@color/mainOrange" />

        <Switch
            android:id="@+id/switchTrenchPit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Under Trench"
            android:textColor="@color/defaultColor"
            android:textSize="16sp"
            android:thumbTint="@color/mainOrange" />

        <Switch
            android:id="@+id/switchBumpersPit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Over Bumpers"
            android:textColor="@color/defaultColor"
            android:textSize="16sp"
            android:thumbTint="@color/mainOrange" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="5dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgEndGamePit"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_park" />

            <ImageView
                android:id="@+id/imgPCPit"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_cppc" />

            <ImageView
                android:id="@+id/imgRCPit"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_cprc" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>