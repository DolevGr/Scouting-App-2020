<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvFinish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Finish"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.15" />

    <Button
        android:id="@+id/btnToSubmission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="70dp"
        android:text="View Submission"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imgFinishFinish"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.388"
        app:srcCompat="@drawable/ic_won" />

    <EditText
        android:id="@+id/edExtaInfo"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Comment"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgFinishFinish" />

    <ImageView
        android:id="@+id/imgTicketFinish"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/imgCrashFinish"
        app:layout_constraintEnd_toEndOf="@+id/edExtaInfo"
        app:layout_constraintStart_toStartOf="@+id/edExtaInfo"
        app:layout_constraintTop_toTopOf="@+id/imgCrashFinish"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_no_foul" />

    <ImageView
        android:id="@+id/imgCrashFinish"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toTopOf="@+id/btnToSubmission"
        app:layout_constraintEnd_toEndOf="@+id/edExtaInfo"
        app:layout_constraintStart_toEndOf="@+id/imgTicketFinish"
        app:layout_constraintTop_toBottomOf="@+id/edExtaInfo"
        app:srcCompat="@drawable/ic_no_crash" />

    <ImageView
        android:id="@+id/imgDefenceFinish"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/imgTicketFinish"
        app:layout_constraintEnd_toStartOf="@+id/imgTicketFinish"
        app:layout_constraintStart_toStartOf="@+id/edExtaInfo"
        app:layout_constraintTop_toTopOf="@+id/imgTicketFinish"
        app:srcCompat="@drawable/ic_no_defence" />

</androidx.constraintlayout.widget.ConstraintLayout>