<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvPowerCells1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Power Cells Lower"
        app:layout_constraintBottom_toBottomOf="@+id/sbPowerCellsLower"
        app:layout_constraintEnd_toStartOf="@+id/sbPowerCellsLower"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/sbPowerCellsLower" />

    <SeekBar
        android:id="@+id/sbPowerCellsLower"
        android:layout_width="196dp"
        android:layout_height="38dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="164dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvPowerCellsLower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/sbPowerCellsLower"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sbPowerCellsLower"
        app:layout_constraintTop_toTopOf="@+id/sbPowerCellsLower" />


    <TextView
        android:id="@+id/tvPowerCells2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Power Cells Outer"
        app:layout_constraintBottom_toBottomOf="@+id/sbPowerCellsInner"
        app:layout_constraintEnd_toStartOf="@+id/sbPowerCellsInner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/sbPowerCellsInner" />

    <SeekBar
        android:id="@+id/sbPowerCellsInner"
        android:layout_width="196dp"
        android:layout_height="38dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sbPowerCellsLower" />

    <TextView
        android:id="@+id/tvPowerCellsInner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/sbPowerCellsInner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sbPowerCellsInner"
        app:layout_constraintTop_toTopOf="@+id/sbPowerCellsInner" />


    <TextView
        android:id="@+id/tvPowerCells3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Power Cells Inner"
        app:layout_constraintBottom_toBottomOf="@+id/sbPowerCellsOuter"
        app:layout_constraintEnd_toStartOf="@+id/sbPowerCellsOuter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/sbPowerCellsOuter"
        app:layout_constraintVertical_bias="0.368" />

    <SeekBar
        android:id="@+id/sbPowerCellsOuter"
        android:layout_width="196dp"
        android:layout_height="38dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sbPowerCellsInner" />

    <TextView
        android:id="@+id/tvPowerCellsOuter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/sbPowerCellsOuter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sbPowerCellsOuter"
        app:layout_constraintTop_toTopOf="@+id/sbPowerCellsOuter"
        app:layout_constraintVertical_bias="1.0" />


    <TextView
        android:id="@+id/tvPowerCells4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Power Cells Missed"
        app:layout_constraintBottom_toBottomOf="@+id/sbPowerCellsMissed"
        app:layout_constraintEnd_toStartOf="@+id/sbPowerCellsMissed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/sbPowerCellsMissed"
        app:layout_constraintVertical_bias="0.368" />

    <SeekBar
        android:id="@+id/sbPowerCellsMissed"
        android:layout_width="196dp"
        android:layout_height="38dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sbPowerCellsOuter" />

    <TextView
        android:id="@+id/tvPowerCellsMissed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/sbPowerCellsMissed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sbPowerCellsMissed"
        app:layout_constraintTop_toTopOf="@+id/sbPowerCellsMissed"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btnCycle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:text="Cycle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>